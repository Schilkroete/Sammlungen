<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="schilkroete.sammlung.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_alertdialog"
            android:text="@string/btn_alertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btn_checkNetzwerk"
            android:text="@string/btn_checkNetzwerk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>
        <Button
            android:id="@+id/btn_imageEinbindenUndAendern"
            android:text="@string/btn_imageEinbindenUndAendern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"/>
        <Button
            android:id="@+id/btn_standortGeben"
            android:text="@string/btn_zeigeStandort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"/>
        <Button
            android:id="@+id/btn_tictactoe"
            android:text="@string/btn_ticTacToe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"/>
        <Button
            android:id="@+id/btn_listView"
            android:text="@string/btn_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"/>
        <Button
            android:id="@+id/btn_bewertung"
            android:text="@string/btn_bewertung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"/>
        <Button
            android:id="@+id/btn_brainTrainer"
            android:text="@string/btn_brainTrainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"/>


        <Button
            android:id="@+id/btn_verblasse"
            android:text="@string/btn_animationVerblassung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btn_datePicker"
            android:text="@string/btn_datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"/>
        <Button
            android:id="@+id/btn_progressbar"
            android:text="@string/btn_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"/>
        <Button
            android:id="@+id/btn_swipeSide"
            android:text="@string/btn_swipeSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"/>
        <Button
            android:id="@+id/btn_timer"
            android:text="@string/btn_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"/>
        <Button
            android:id="@+id/btn_toastNachWunsch"
            android:text="@string/btn_toastNachWunscheingabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"/>
        <Button
            android:text="@string/btn_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:id="@+id/btn_visibility"/>
        <Button
            android:text="@string/btn_reaktion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:id="@+id/btn_reaktion"/>



    </GridLayout>


</RelativeLayout>

    <!-- row = Zeilen -->
    <!-- column = Spalten-->